<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".utils.ToDoAdapter">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#CBE3F0"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskcardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Name"
                android:fontFamily="@font/urbanist_extrabold"
                android:textColor="@color/IMEblack">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="3dp"
                    android:text="Due Date :"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#757575">
                </TextView>

                <TextView
                    android:id="@+id/taskcardDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="3dp"
                    android:text="88/88/88 88:88"
                    android:fontFamily="@font/urbanist_medium"
                    android:textColor="#757575">
                </TextView>

            </LinearLayout>

        </LinearLayout>

            <ImageButton
                android:id="@+id/taskcardEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="-80dp"
                android:paddingStart="30dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/editicon"
                android:backgroundTint="@color/secIMEblue"
                android:scaleType="center"
                android:scaleX="0.4"
                android:scaleY="0.4">

            </ImageButton>

            <ImageButton
                android:id="@+id/taskcardDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/trash_2"
                android:layout_gravity="right|center_vertical"
                android:backgroundTint="@color/IMEred"
                android:scaleType="center"
                android:scaleX="0.4"
                android:scaleY="0.4">

            </ImageButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>